  <div class="overflow-x-auto -mx-4 px-4">
    <div class="flex flex-col gap-4 min-w-max max-h-[500px]">
      <% if @campaigns.any? %>
        <%= render partial: 'shared/campaign_card', collection: @campaigns, as: :campaign %>
      <% else %>
        <div class="p-6 bg-white rounded-2xl shadow-sm border border-gray-100">
          <p class="text-gray-600">No campaigns yet. Create one to get started.</p>
        </div>
      <% end %>
    </div>
  </div>