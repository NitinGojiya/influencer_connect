<div class="max-w-7xl mx-auto p-5">
        <!-- Dashboard Header -->
        <header class="flex flex-col sm:flex-row justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800 mb-2 sm:mb-0">Overview</h1>
            <div class="flex items-center space-x-2 text-gray-600 text-sm">
            </div>
        </header>

        <!-- Top row of summary cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <!-- Card 1: Views -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-semibold text-gray-500">IG Follower</h2>

                    <i class="fa-brands fa-instagram text-xl"></i>
                </div>
                <div class="flex items-end">
                    <span class="text-3xl font-bold text-gray-800 mr-2">6,154</span>
                    <span class="text-xs font-semibold text-green-500 bg-green-100 px-2 py-1 rounded-full">+11.02%</span>
                </div>
            </div>

            <!-- Card 2: Visits -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-semibold text-gray-500">Youtube</h2>
                    <i class="fa-brands fa-youtube text-purple-500 text-xl hover:text-red-500"></i>
                </div>
                <div class="flex items-end">
                    <span class="text-3xl font-bold text-gray-800 mr-2">3,526</span>
                    <span class="text-xs font-semibold text-red-500 bg-red-100 px-2 py-1 rounded-full">-0.56%</span>
                </div>
            </div>

            <!-- Card 3: New Users -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-semibold text-gray-500">New Brand</h2>
                    <i class="fa-solid fa-code-branch text-yellow-500 text-xl"></i>
                </div>
                <div class="flex items-end">
                    <span class="text-3xl font-bold text-gray-800 mr-2">615</span>
                    <span class="text-xs font-semibold text-green-500 bg-green-100 px-2 py-1 rounded-full">+15.02%</span>
                </div>
            </div>

            <!-- Card 4: New Users (similar to 3) -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-sm font-semibold text-gray-500">Increase Promotion</h2>
                    <i class="fas fa-chart-line text-green-500 text-xl"></i>
                </div>
                <div class="flex items-end">
                    <span class="text-3xl font-bold text-gray-800 mr-2">2,607</span>
                    <span class="text-xs font-semibold text-green-500 bg-green-100 px-2 py-1 rounded-full">+6.07%</span>
                </div>
            </div>
        </div>

        <!-- Middle row of charts -->
        <div class="grid grid-cols-1 lg:grid-cols-1 gap-6 mb-6">
            <!-- Left chart: Total Users line graph -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200 ">
            <div>
                <div class="flex items-center justify-between pb-4 border-b border-gray-200">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">
                Live Campaign
            </h2>
            <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 ring-1 ring-inset ring-green-600/20 shadow-md">
                <svg class="w-2 h-2 mr-1 animate-pulse" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                </svg>
                LIVE
            </span>
        </div>
            </div>

            <div class="flex items-center justify-center">
                <%=render 'campaign'%>
            </div>
            </div>
        </div>

        <!-- Bottom row of charts -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                        <!-- Right chart: Traffic by Website -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200">
                <h2 class="text-lg font-bold text-gray-800 mb-4">profile</h2>
                <!-- List of websites with bar indicators -->
                <div class="space-y-4">
                 data

                </div>
            </div>
            <!-- Right chart: Traffic by Location -->
            <div class="bg-white p-6 rounded-2xl shadow-md border border-gray-200 flex flex-col sm:flex-row items-center justify-around">
                <div class="mb-6 sm:mb-0 sm:mr-6">
                    <h2 class="text-lg font-bold text-gray-800 mb-4">Traffic of campaigns Location</h2>
                    <div class="donut-chart"></div>
                </div>
                <!-- Legend for the donut chart -->
                <div class="space-y-2">
                    <!-- Item 1: India -->
                    <div class="flex items-center justify-between space-x-4">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full bg-blue-500 mr-2"></span>
                            <span class="text-sm text-gray-700">Jamnagar</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-800">49.78</span>
                    </div>
                    <!-- Item 2: Canada -->
                    <div class="flex items-center justify-between space-x-4">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full bg-red-500 mr-2"></span>
                            <span class="text-sm text-gray-700">Rajkot</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-800">35.67</span>
                    </div>
                    <!-- Item 3: Mexico -->
                    <div class="flex items-center justify-between space-x-4">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></span>
                            <span class="text-sm text-gray-700">Porbandar</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-800">29.43</span>
                    </div>
                    <!-- Item 4: Other -->
                    <div class="flex items-center justify-between space-x-4">
                        <div class="flex items-center">
                            <span class="w-3 h-3 rounded-full bg-green-500 mr-2"></span>
                            <span class="text-sm text-gray-700">Other</span>
                        </div>
                        <span class="text-sm font-semibold text-gray-800">22.65</span>
                    </div>
                </div>
            </div>
        </div>
</div>

