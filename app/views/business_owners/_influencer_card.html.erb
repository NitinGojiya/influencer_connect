<div
  class="hover:shadow-lg transition-shadow duration-300 shadow-blue-700 p-6 rounded-3xl border border-secondary shadow-card glass-card backdrop-blur-lg flex flex-col relative group w-full sm:w-80 lg:w-[350px] mx-auto mb-6 h-full overflow-hidden">

  <!-- Glow Effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-500 opacity-0 group-hover:opacity-10 transition duration-500 rounded-3xl"></div>

  <% if local_assigns[:owner] %>
    <div class="flex justify-end mb-2 relative z-10">
      <%= link_to influencer_profile_path, method: :get,
          class: "text-primary hover:text-primary-light transition-colors" do %>
        <i class="fas fa-edit fa-lg"></i>
      <% end %>
    </div>
  <% end %>

  <!-- Category / Content Type Badge -->
  <span class="absolute top-4 right-4 bg-secondary text-secondary-foreground text-xs font-medium px-2.5 py-0.5 rounded-full z-10">
    <%= influencer.category %>
  </span>

  <!-- Profile Image -->
  <div class="relative z-10 flex flex-col items-center mb-4">
    <div class="relative">
      <img src="<%= influencer.photo_url %>" alt="<%= influencer.name %>"
        class="w-20 h-20 rounded-full border-4 border-secondary shadow-lg object-cover">
      <% if influencer.verified? %>
        <div
          class="absolute -top-2 -right-2 w-7 h-7 bg-indigo-600 text-white rounded-full flex items-center justify-center shadow">
          <i class="fas fa-check fa-xs"></i>
        </div>
      <% end %>
    </div>

    <!-- Name & Email -->
    <h2 class="text-xl font-semibold text-card-foreground mt-3">
      <%= influencer.name %>
    </h2>
    <p class="text-muted-foreground text-sm">
      <a href="mailto:<%= influencer.email || '' %>">
        <%= influencer.email || "unknown_user" %>
      </a>
    </p>

    <!-- City -->
    <div class="flex items-center text-muted-foreground text-sm mt-1">
      <i class="fas fa-map-marker-alt mr-1 text-xs"></i>
      <span><%= influencer.city_name %></span>
    </div>
  </div>

  <!-- Bio -->
  <p class="text-sm text-muted-foreground mb-4 line-clamp-2 relative z-10">
    <%= influencer.bio %>
  </p>

  <!-- Social Stats -->
  <div class="grid grid-cols-3 text-center border-t border-b border-muted-foreground/30 py-4 mb-4 relative z-10">
    <div>
      <p class="text-card-foreground font-bold">
        <%= influencer.instagram_followers || "N/A" %>
      </p>
      <p class="text-xs text-muted-foreground">IG</p>
    </div>
    <div class="border-x border-muted-foreground/30">
      <p class="text-card-foreground font-bold">
        <%= influencer.youtube_subscribers || "N/A" %>
      </p>
      <p class="text-xs text-muted-foreground">YT</p>
    </div>
    <div>
      <p class="text-card-foreground font-bold">
        <%= influencer.twitter_followers || "N/A" %>
      </p>
      <p class="text-xs text-muted-foreground">X</p>
    </div>
  </div>

  <!-- Social Media Links -->
  <div class="flex justify-center gap-3 mb-4 relative z-10">
    <% if influencer.ig_link.present? %>
      <a href="<%= influencer.ig_link %>" target="_blank"
        class="w-8 h-8 flex items-center justify-center rounded-full bg-pink-100 text-pink-600 hover:bg-pink-200 transition">
        <i class="fab fa-instagram"></i>
      </a>
    <% end %>
    <% if influencer.youtube_link.present? %>
      <a href="<%= influencer.youtube_link %>" target="_blank"
        class="w-8 h-8 flex items-center justify-center rounded-full bg-red-100 text-red-600 hover:bg-red-200 transition">
        <i class="fab fa-youtube"></i>
      </a>
    <% end %>
    <% if influencer.twitter_link.present? %>
      <a href="<%= influencer.twitter_link %>" target="_blank"
        class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-100 text-blue-600 hover:bg-blue-200 transition">
        <i class="fab fa-twitter"></i>
      </a>
    <% end %>
  </div>

  <!-- Details -->
  <div class="mt-3 space-y-1 text-sm text-muted-foreground relative z-10">
    <p><span class="font-semibold text-card-foreground">Language:</span> <%= influencer.language %></p>

  </div>

  <!-- Chat Form -->
  <% if local_assigns[:contact] %>
    <div class="mt-5 relative z-10">
      <%= form_with url: conversations_path, method: :post, data: { turbo: false }, class: "w-full" do %>
        <%= hidden_field_tag "conversation[receiver_id]", influencer.receiver_id %>
        <%= submit_tag "Get Contact & Start Chat",
            class: "w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-2 rounded-full hover:shadow-lg transition-all font-semibold" %>
      <% end %>
    </div>
  <% end %>
</div>
