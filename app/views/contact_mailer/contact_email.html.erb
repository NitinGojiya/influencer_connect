<table role="presentation" align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #0A0014;">
    <tr>
        <td style="padding: 40px 20px;">
            <!-- Main Content Area -->
            <table role="presentation" align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px;">
                <tr>
                    <td style="padding-bottom: 30px; text-align: center;">
                        <!-- Logo with gradient text effect -->
                        <h1 style="
                            font-size: 24px;
                            font-weight: bold;
                            margin: 0;
                            line-height: 1.2;
                            background-image: linear-gradient(to right, #FEE75E, #3DCC91);
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            text-align: center;
                        ">INFLUENCERTRACK</h1>
                    </td>
                </tr>
                <tr>
                    <td style="padding-bottom: 20px;">
                        <!-- Main heading with gradient text effect -->
                        <h1 style="
                            font-size: 32px;
                            font-weight: bold;
                            color: #ffffff;
                            margin: 0;
                            line-height: 1.2;
                            background-image: linear-gradient(to right, #FEE75E, #3DCC91);
                            -webkit-background-clip: text;
                            -webkit-text-fill-color: transparent;
                            text-align: center;
                        ">New Contact Request</h1>
                    </td>
                </tr>
                <tr>
                    <td style="padding-top: 10px; color: #ffffff; font-size: 16px; line-height: 1.6;">
                        <!-- Contact details -->
                        <p style="margin: 0 0 10px 0;">
                            <strong style="color: #ffffff;">Name:</strong> <span style="color: #ffffff;"><%= @contact.name %></span>
                        </p>
                        <p style="margin: 0 0 10px 0;">
                            <strong style="color: #ffffff;">Email:</strong> <span style="color: #ffffff;"><%= @contact.email %></span>
                        </p>
                        <p style="margin: 0 0 10px 0;">
                            <strong style="color: #ffffff;">Subject:</strong> <span style="color: #ffffff;"><%= @contact.subject %></span>
                        </p>
                        <p style="margin: 0 0 10px 0;">
                            <strong style="color: #ffffff;">Message:</strong>
                        </p>
                        <p style="margin: 0 0 20px 0; color: #ffffff;"><%= @contact.message %></p>
                        <p style="margin: 0; color: #ffffff;">Thank you for reaching out to us. We will get back to you shortly.</p>
                    </td>
                </tr>
            </table>
            <!-- End Main Content Area -->
        </td>
    </tr>
</table>
