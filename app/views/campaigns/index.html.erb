<div class="max-w-6xl mx-auto px-4 py-8">
  <header class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold">Your Campaigns</h1>
    <div class="flex items-center gap-2">
      <%= link_to new_campaign_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-2xl bg-blue-600 text-white hover:bg-blue-700" do %>
      <i class="fa-solid fa-plus"></i> Campaign
      <%end%>
    </div>
  </header>

  <!-- Horizontal scroll container -->
  <div class="overflow-x-auto -mx-4 px-4">
    <div class="flex flex-col gap-4 min-w-max min-h-max">
      <% if @campaigns.any? %>
        <%= render partial: 'shared/campaign_card',
           collection: @campaigns,
           as: :campaign,
           locals: { owner: true } %>

      <% else %>
        <div class="p-6 bg-white rounded-2xl shadow-sm border border-gray-100">
          <p class="text-gray-600">No campaigns yet. Create one to get started.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
