<!-- app/views/messages/_form.html.erb -->
<div id="<%= dom_id(message) %>" class="bg-white border-t border-gray-300">
  <%= form_with model: [conversation, message],
                data: { turbo_stream: true },
                html: { multipart: true },
                class: "p-4 flex space-x-2" do |f| %>

    <!-- Text field -->
    <%= f.text_field :content,
        placeholder: "Type a message...",
        class: "flex-1 rounded-lg bg-gray-100 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>

    <!-- File upload (hidden) -->
    <%= f.file_field :image, class: "hidden", id: "message_image_input" %>

    <!-- File upload button -->
    <label for="message_image_input"
           class="cursor-pointer bg-gray-200 px-3 py-2 rounded-lg hover:bg-gray-300">
      ðŸ“Ž
    </label>

    <!-- Send button -->
    <%= f.submit "Send", class: "bg-blue-500 px-4 py-2 rounded-lg hover:bg-blue-600 text-white" %>
  <% end %>
</div>
